@author "qb114514"
@description "Stasis config"

default:
  pre_suspend_command "swaylock"
  lid_close_action "lock-screen"
  lid_open_action "wake"
  dpms:
    timeout 120  # 1 minute after lock
    command "niri msg action power-off-monitors"
    resume_command "niri msg action power-on-monitors"
  end
  lock_screen:
    timeout 60
    command "swaylock"
  end
  suspend:
    timeout 3600
    command "systemctl hybrid-sleep"
  end
end

